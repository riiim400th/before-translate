{
  "manifest_version": 3,
  "name": "BeforeTranslate",
  "description": "翻訳前にコードタグを整形します。",
  "version": "1.1.0",
  "permissions": [
    "contextMenus",
    "scripting",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content_scripts/sanitize.js",
        "content_scripts/protect_trans.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
